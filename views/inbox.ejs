                }
            });
        }

        if (attachment_preview) {
            attachment_preview.addEventListener("click", (event) => {
                const img = event.target.closest(".attachment-thumb img");
                if (img) {
                    openAttachmentViewer(img.getAttribute("src"));
                }
            });
        }

        if (attachment_viewer_close) {
            attachment_viewer_close.addEventListener("click", closeAttachmentViewer);
        }

        if (attachment_viewer) {
            attachment_viewer.addEventListener("click", (event) => {
                if (event.target.id === "attachment-viewer") {
                    closeAttachmentViewer();
                }
            });
        }

        if (pinned_message_container) {
            pinned_message_container.addEventListener("click", (event) => {
                if (event.target.closest(".pinned-remove-btn")) {
                    pinnedMessage = null;
                    renderPinnedMessage();
                }
            });
        }

        document.addEventListener("click", (event) => {
            if (!event.target.closest(".message-actions")) {
                closeMessageMenus();
            }
            if (
                inline_add_member_panel &&
                !inline_add_member_panel.classList.contains("hidden") &&
                !event.target.closest("#inline-add-member-panel") &&
                !event.target.closest("#add-members-icon")
            ) {
                closeInlineAddMember();
            }
        });
</script>
</body>
