        function renderMessage(message) {
            const isOwn = String(message.sender.id) === String(currentUserId);
            const avatar = message.sender.avatar
                ? `<img src="./uploads/avatars/${message.sender.avatar}" alt="${escapeHtml(message.sender.name)}" class="w-8 h-8 rounded-full">`
                : `<div class="bg-light-color hover-bg-dark-color flex items-center justify-center text-neutral-content rounded-full w-8 h-8">
                        <span class="text-xl">${escapeHtml(message.sender.name[0]).toUpperCase()}</span>
                   </div>`;

