                input.className = "group-title-input";
                chat_message_title_name.replaceWith(input);
                input.focus();
                input.select();

                const save = async () => {
                    const nextName = input.value.trim();
                    if (!nextName || nextName === currentName) {
                        input.replaceWith(chat_message_title_name);
                        chat_message_title_name.textContent = currentName;
                        return;
                    }
                    const response = await fetch(`/inbox/conversation/group/${current_conversation_id}/name`, {
                        method: "PATCH",
                        body: JSON.stringify({ name: nextName }),
                        headers: { "content-type": "application/json; charset=UTF-8" },
