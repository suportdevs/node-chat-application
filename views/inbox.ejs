    <script>
        const conversationDataset = <%- JSON.stringify(data || []) %>;
        const conversation_content_wrapper = document.querySelector("#conversation-content-wrapper");
        const chat_message_title_container = document.querySelector("#chat-message-title-container");
        const chat_message_avatar_container = document.querySelector("#chat-message-avatar-container");
        const chat_message_title_name = document.querySelector("#chat-message-title-name");
        const user_online_status_text_container = document.querySelector("#user-online-status-text-container");
        const chat_message_list = document.querySelector("#chat-message-list");
        const pinned_message_container = document.querySelector("#pinned-message-container");
        const chat_form_container = document.querySelector("#chat-form-container");
        const chat_back_btn = document.querySelector("#chat-back-btn");
        const main_content_wrapper = document.querySelector(".main-content-wrapper");
        const attachment_input = document.getElementById("attachment");
        const attachment_preview = document.getElementById("attachment-preview");
        const chat_message_input = document.getElementById("chat-message-input");
        const message_search_input = document.getElementById("message-search-input");
        const chat_message_block_container = document.querySelector(".chat-message-block-container");
        const blocked_message_form_container = document.querySelector(".blocked-message-form-container");
        const leave_group_item = document.querySelector("#leave-group-item");
        const clear_message_item = document.querySelector("#clear-message-item");
        const add_members_icon = document.querySelector("#add-members-icon");
        const inline_add_member_panel = document.querySelector("#inline-add-member-panel");
        const inline_add_member_input = document.querySelector("#inline-add-member-input");
        const inline_add_member_results = document.querySelector("#inline-add-member-results");
        const inline_add_member_close = document.querySelector("#inline-add-member-close");
        const attachment_viewer = document.querySelector("#attachment-viewer");
        const attachment_viewer_img = document.querySelector("#attachment-viewer-img");
        const attachment_viewer_close = document.querySelector("#attachment-viewer-close");
        const currentUserName = <%- JSON.stringify(loggedInUser?.username || "") %>;
        const typing_input_indicator = document.querySelector("#typing-indicator-input");

        const currentUserId = window.loggedInUserId || document.querySelector("meta[name=\"userId\"]")?.getAttribute("content");
        const socketRef = typeof socket !== "undefined" ? socket : io();
        let onlineUsersList = [];

        let current_conversation_id = null;
        let participant = null;
        let currentConversation = null;
        let pagination = { loading: false, hasMore: false, nextBefore: null };
        let pinnedMessage = null;
        let attachmentFiles = [];
        let inlineMemberTimer = null;
        let typingTimeout = null;
        const typingByConversation = new Map();

        socketRef.on("conversation_created", ({ conversation }) => {
            if (!conversation || !conversation._id) return;
            const isMember =
                String(conversation.creator?.id) === String(currentUserId) ||
                String(conversation.participant?.id) === String(currentUserId) ||
                (conversation.members || []).some((member) => String(member.id) === String(currentUserId));
            if (!isMember) return;
            const exists = (conversationDataset || []).some((item) => String(item._id) === String(conversation._id));
            if (!exists) {
                conversationDataset.unshift(conversation);
                renderConversationList(conversationDataset);
            }
        });

        socketRef.on("online-users", (onlineUserIds) => {
            onlineUsersList = onlineUserIds || [];
            updateOnlineStatusText();
            updateConversationStatusBadges();
        });

        socketRef.on("typing", ({ conversationId, senderId, senderName, isGroup }) => {
            if (!conversationId || senderId === currentUserId) return;
            const entry = typingByConversation.get(conversationId) || {
                senders: new Map(),
                isGroup: !!isGroup,
            };
            entry.isGroup = !!isGroup;
            entry.senders.set(senderId, senderName || "Someone");
            typingByConversation.set(conversationId, entry);
            updateTypingForConversation(conversationId);
        });

        socketRef.on("stop-typing", ({ conversationId, senderId }) => {
            if (!conversationId || !typingByConversation.has(conversationId)) return;
            const entry = typingByConversation.get(conversationId);
            entry.senders.delete(senderId);
            if (entry.senders.size === 0) {
                typingByConversation.delete(conversationId);
            } else {
                typingByConversation.set(conversationId, entry);
            }
            updateTypingForConversation(conversationId);
        });

        function toggleChatPanel(show) {
            if (!main_content_wrapper) return;
            if (show) {
                main_content_wrapper.classList.add("show-chat-panel");
            } else {
                main_content_wrapper.classList.remove("show-chat-panel");
            }
        }

        if (chat_back_btn) {
            chat_back_btn.addEventListener("click", () => toggleChatPanel(false));
        }

        if (add_members_icon) {
            add_members_icon.addEventListener("click", (event) => {
                event.preventDefault();
                event.stopPropagation();
                if (!current_conversation_id || !participant) return;
                openInlineAddMember();
            });
        }

        function openInlineAddMember() {
            if (!inline_add_member_panel || !inline_add_member_input) return;
            inline_add_member_panel.classList.remove("hidden");
            inline_add_member_input.value = "";
            if (inline_add_member_results) inline_add_member_results.innerHTML = "";
            if (chat_message_list) {
                chat_message_list.scrollTop = 0;
            }
            inline_add_member_input.focus();
        }

        function closeInlineAddMember() {
            if (!inline_add_member_panel) return;
            inline_add_member_panel.classList.add("hidden");
            if (inline_add_member_results) inline_add_member_results.innerHTML = "";
        }

        function ensureTypingIndicator() {
            if (!chat_message_list) return null;
            const indicator = document.querySelector("#typing-indicator");
            if (indicator && !chat_message_list.contains(indicator)) {
                chat_message_list.appendChild(indicator);
            }
            return indicator;
        }

        function setConversationPreview(conversationId, text, isTyping = false) {
            const previewEl = document.querySelector(
                `.conversation-item[data-conversation-id="${conversationId}"] .conversation-preview`
            );
            if (!previewEl) return;
            previewEl.textContent = text;
            previewEl.classList.toggle("is-typing", isTyping);
        }

        function restoreConversationPreview(conversationId) {
            const previewEl = document.querySelector(
                `.conversation-item[data-conversation-id="${conversationId}"] .conversation-preview`
            );
            if (!previewEl) return;
            const original = previewEl.getAttribute("data-preview") || "";
            previewEl.textContent = original;
            previewEl.classList.remove("is-typing");
        }

        function getTypingLabel(entry) {
            if (!entry || entry.senders.size === 0) return "";
            if (!entry.isGroup) return "Typing...";
            const names = Array.from(entry.senders.values());
            if (names.length === 1) return `${names[0]} typing...`;
            return `${names[0]} +${names.length - 1} typing...`;
        }

        function updateTypingForConversation(conversationId) {
            const entry = typingByConversation.get(conversationId);
            if (!entry || entry.senders.size === 0) {
                restoreConversationPreview(conversationId);
            } else {
                setConversationPreview(conversationId, getTypingLabel(entry), true);
            }

            if (conversationId === current_conversation_id) {
                const indicator = ensureTypingIndicator();
                if (!indicator) return;
                const labelEl = indicator.querySelector(".typing-label");
                if (!entry || entry.senders.size === 0) {
                    indicator.classList.add("hidden");
                    if (typing_input_indicator) typing_input_indicator.classList.add("hidden");
                } else {
                    indicator.classList.remove("hidden");
                    if (labelEl) labelEl.textContent = getTypingLabel(entry);
                    if (typing_input_indicator) {
                        typing_input_indicator.classList.remove("hidden");
                        const inputLabel = typing_input_indicator.querySelector(".typing-label");
                        if (inputLabel) inputLabel.textContent = getTypingLabel(entry);
                    }
                }
            }
        }

        function applyTypingToList() {
            typingByConversation.forEach((_, conversationId) => {
                updateTypingForConversation(conversationId);
            });
        }

        function emitTypingStatus() {
            if (!current_conversation_id || !currentUserId) return;
            socketRef.emit("typing", {
                conversationId: current_conversation_id,
                senderId: currentUserId,
                senderName: currentUserName,
            });
            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                socketRef.emit("stop-typing", {
                    conversationId: current_conversation_id,
                    senderId: currentUserId,
                    senderName: currentUserName,
                });
            }, 1200);
        }

        function emitStopTyping() {
            if (!current_conversation_id || !currentUserId) return;
            socketRef.emit("stop-typing", {
                conversationId: current_conversation_id,
                senderId: currentUserId,
                senderName: currentUserName,
            });
        }

        function getCurrentMemberIds() {
            if (participant?.isGroup && Array.isArray(participant.members)) {
                return participant.members.map((member) => String(member.id));
            }
            const ids = [];
            if (participant?.id) ids.push(String(participant.id));
            if (currentUserId) ids.push(String(currentUserId));
            return ids;
        }

        async function addMemberToConversation(memberId) {
            if (!current_conversation_id || !memberId) return;
            const response = await fetch(`/inbox/conversation/group/${current_conversation_id}/add`, {
                method: "POST",
                body: JSON.stringify({ memberIds: [memberId] }),
                headers: { "content-type": "application/json; charset=UTF-8" },
            });
            const result = await response.json();
            if (!result.errors) {
                toastr.success(result.message || "Member added.");
                setTimeout(() => location.reload(), 100);
            } else {
                toastr.error(result.errors.common.msg);
            }
        }

        async function searchInlineMembers(query) {
            if (!inline_add_member_results) return;
            const response = await fetch("/inbox/search", {
                method: "POST",
                body: JSON.stringify({ user: query }),
                headers: { "content-type": "application/json; charset=UTF-8" },
            });
            const result = await response.json();
            if (result.errors) {
                inline_add_member_results.innerHTML = `<div class="inline-add-member-empty">${result.errors.common.msg}</div>`;
                return;
            }
            const existingIds = new Set(getCurrentMemberIds());
            if (!Array.isArray(result) || result.length === 0) {
                inline_add_member_results.innerHTML = `<div class="inline-add-member-empty">No user found</div>`;
                return;
            }
            inline_add_member_results.innerHTML = result
                .map((user) => {
                    const isExisting = existingIds.has(String(user._id));
                    const avatar = user.avatar
                        ? `<img src="./uploads/avatars/${user.avatar}" alt="${escapeHtml(user.name)}">`
                        : `<div class="inline-add-member-avatar">${escapeHtml(user.name[0] || "?").toUpperCase()}</div>`;
                    return `<div class="inline-add-member-row ${isExisting ? "is-disabled" : ""}" ${isExisting ? "" : `data-user-id="${user._id}"`}>
                                ${avatar}
                                <div class="inline-add-member-name">
                                    <div>${escapeHtml(user.name)}</div>
                                    ${isExisting ? `<span>Already in conversation</span>` : ""}
                                </div>
                            </div>`;
                })
                .join("");
        }

        if (inline_add_member_input) {
            inline_add_member_input.addEventListener("keyup", () => {
                const query = inline_add_member_input.value.trim();
                clearTimeout(inlineMemberTimer);
                if (!query) {
                    if (inline_add_member_results) {
                        inline_add_member_results.innerHTML = `<div class="inline-add-member-empty">Type to search</div>`;
                    }
                    return;
                }
                inlineMemberTimer = setTimeout(() => searchInlineMembers(query), 400);
            });
        }

        if (inline_add_member_close) {
            inline_add_member_close.addEventListener("click", () => closeInlineAddMember());
        }

        if (inline_add_member_results) {
            inline_add_member_results.addEventListener("click", (event) => {
                const row = event.target.closest(".inline-add-member-row");
                if (!row || row.classList.contains("is-disabled")) return;
                const userId = row.getAttribute("data-user-id");
                if (userId) {
                    addMemberToConversation(userId);
                }
            });
        }

        function escapeHtml(text) {
            return String(text || "")
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/\"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        function escapeRegex(text) {
            return text.replace(/[.*+?^${}()|[\]\\]/g, "\\$&");
        }

        function renderPinnedMessage() {
            if (!pinned_message_container) return;
            if (!pinnedMessage) {
                pinned_message_container.classList.add("hidden");
                pinned_message_container.innerHTML = "";
                return;
            }

            const pinnedText = pinnedMessage.text || "Attachment";
            const attachmentCount = pinnedMessage.attachments?.length || 0;
            const attachmentLabel = attachmentCount ? `${attachmentCount} attachment${attachmentCount > 1 ? "s" : ""}` : "";
            pinned_message_container.innerHTML = `
                <div class="pinned-content">
                    <div class="pinned-label">Pinned</div>
                    <div class="pinned-text">${escapeHtml(pinnedText)}</div>
                    ${attachmentLabel ? `<div class="pinned-meta">${escapeHtml(attachmentLabel)}</div>` : ""}
                </div>
                <button class="pinned-remove-btn" type="button" aria-label="Unpin message">×</button>
            `;
            pinned_message_container.classList.remove("hidden");
        }

        function setPinnedMessage(message) {
            if (pinnedMessage && message && pinnedMessage.id === message.id) {
                pinnedMessage = null;
            } else {
                pinnedMessage = message;
            }
            renderPinnedMessage();
        }

        function closeMessageMenus() {
            document.querySelectorAll(".message-menu.active").forEach((menu) => {
                menu.classList.remove("active");
            });
        }

        function getMessageData(row) {
            if (!row) return null;
            const attachments = row.dataset.messageAttachments
                ? JSON.parse(decodeURIComponent(row.dataset.messageAttachments))
                : [];
            return {
                id: row.dataset.messageId,
                text: row.dataset.messageText || "",
                attachments,
            };
        }

        async function copyToClipboard(text) {
            if (!text) return false;
            if (navigator.clipboard?.writeText) {
                await navigator.clipboard.writeText(text);
                return true;
            }
            const textarea = document.createElement("textarea");
            textarea.value = text;
            textarea.setAttribute("readonly", "");
            textarea.style.position = "absolute";
            textarea.style.left = "-9999px";
            document.body.appendChild(textarea);
            textarea.select();
            const success = document.execCommand("copy");
            document.body.removeChild(textarea);
            return success;
        }

        function syncAttachmentInput() {
            if (!attachment_input) return;
            const dataTransfer = new DataTransfer();
            attachmentFiles.forEach((file) => dataTransfer.items.add(file));
            attachment_input.files = dataTransfer.files;
        }

        function renderAttachmentPreview() {
            if (!attachment_preview) return;
            if (!attachmentFiles.length) {
                attachment_preview.innerHTML = "";
                attachment_preview.classList.add("hidden");
                return;
            }
            const previews = attachmentFiles
                .map((file, index) => {
                    const url = URL.createObjectURL(file);
                    return `<div class="attachment-thumb">
                                <img src="${url}" alt="${escapeHtml(file.name)}" onload="URL.revokeObjectURL('${url}')">
                                <button class="attachment-remove-btn" type="button" data-index="${index}" aria-label="Remove attachment">×</button>
                            </div>`;
                })
                .join("");
            attachment_preview.innerHTML = previews;
            attachment_preview.classList.remove("hidden");
        }

        function getConversationDisplay(conversation) {
            if (!conversation) return null;
            if (conversation.isGroup) {
                const members = conversation.members || [];
                return {
                    id: conversation._id,
                    isGroup: true,
                    name: conversation.name || "Group",
                    avatar: conversation.avatar || null,
                    memberCount: members.length,
                };
            }
            const isCreator = String(conversation.creator?.id) === String(currentUserId);
            const other = isCreator ? conversation.participant : conversation.creator;
            if (!other) return null;
            return {
                id: conversation._id,
                isGroup: false,
                name: other.name,
                avatar: other.avatar || null,
                participantId: other.id,
            };
        }

        function renderConversationList(list) {
            if (!conversation_content_wrapper) return;
            if (!list || list.length === 0) {
                conversation_content_wrapper.innerHTML = `<div class="flex flex-col items-center gap-3 justify-center text-center p-2 sm:px-3 py-2 h-full text-soft-color hover-bg-light-color cursor-pointer">
                        <div>
                            <img src="./images/no-conversation.png" alt="" class="w-32">
                        </div>
                        <div>
                            <h3 class="text-md font-bold">No conversation yet</h3>
                            <p>Create conversation to contact others</p>
                        </div>
                    </div>`;
                return;
            }

            const html = list
                .map((conversation) => {
                    const display = getConversationDisplay(conversation);
                    if (!display) return "";
                    const previewText = conversation.message?.content || (display.isGroup ? "Group created." : "You are joining this conversation.");
                    const trimmed = previewText.length > 40 ? `${previewText.slice(0, 40)}...` : previewText;
                    const isActive = String(current_conversation_id) === String(conversation._id);
                    const initials = display.name ? display.name[0].toUpperCase() : "?";
                    const avatarHtml = display.avatar
                        ? `<img src="./uploads/avatars/${display.avatar}" alt="${escapeHtml(display.name)}" class="w-12 h-12 rounded-full">`
                        : `<div class="bg-light-color hover-bg-dark-color flex items-center justify-center text-neutral-content rounded-full w-12 h-12">
                                <span class="text-2xl">${escapeHtml(initials)}</span>
                           </div>`;
                    const badgeHtml = display.isGroup
                        ? `<span class="group-count-badge" title="Members">${display.memberCount}</span>`
                        : `<span class="user-status-badge absolute bottom-0 right-0 inline-block w-3 h-3 bg-gray-400 border-2 border-current rounded-full" data-user-id="${display.participantId}"></span>`;
                    return `
                    <div class="conversation-item ${isActive ? "active" : ""}" data-conversation-id="${conversation._id}" data-is-group="${display.isGroup}" data-participant-id="${display.participantId || ""}" data-participant-name="${escapeHtml(display.name)}" data-participant-avatar="${display.avatar || ""}" data-member-count="${display.memberCount || 0}">
