            const time = moment(message.createdAt || message.date_time).fromNow();

            return `
                <div class="message-row ${isOwn ? "is-own" : ""}" data-message-id="${messageId}">
                    ${isOwn ? "" : avatar}
                    <div class="message-bubble">
                        ${messageText ? `<div class="message-text" data-raw="${messageText}">${messageText}</div>` : ""}
                        ${attachmentGrid}
                        <div class="message-meta">
                            <span>${time}</span>
                            ${isOwn ? `<button class="message-delete-btn" data-message-id="${messageId}" type="button">Delete</button>` : ""}
                        </div>
                    </div>
                </div>`;
        }

        async function loadMessages(reset = false) {
            if (!current_conversation_id || pagination.loading) return;
            if (!reset && !pagination.hasMore) return;

            pagination.loading = true;
            const beforeParam = reset || !pagination.nextBefore ? "" : `&before=${encodeURIComponent(pagination.nextBefore)}`;
            const response = await fetch(`/inbox/message/${current_conversation_id}?limit=20${beforeParam}`);
            const result = await response.json();

            if (!result.errors && result.data) {
                if (reset) {
                    chat_message_list.innerHTML = "";
                }

                const messages = result.data.messages || [];
                const html = messages.map(renderMessage).join("");

                if (messages.length === 0 && reset) {
                    chat_message_list.innerHTML = `<div class="message-row message-nothing flex gap-2 text-soft-color items-center justify-center h-full">
                                <h1 class="text-2xl font-bold">You don't have message</h1>
                            </div>`;
                } else if (reset) {
                    chat_message_list.insertAdjacentHTML("beforeend", html);
                } else {
                    const prevScrollHeight = chat_message_list.scrollHeight;
                    const prevScrollTop = chat_message_list.scrollTop;
                    chat_message_list.insertAdjacentHTML("afterbegin", html);
                    chat_message_list.scrollTop = chat_message_list.scrollHeight - prevScrollHeight + prevScrollTop;
                }

                pagination.hasMore = result.pagination?.hasMore || false;
                pagination.nextBefore = result.pagination?.nextBefore || null;

                participant = result.data.participant;
                updateOnlineStatusText();
                updateBlockUnblockUi(currentUserId, result.participantUser?.blockable);

                if (reset) {
                    chat_message_title_container.classList.remove("invisible");
                    chat_form_container.classList.remove("invisible");
                    chat_message_title_name.textContent = participant.name;
                    chat_message_avatar_container.innerHTML = participant.avatar
                        ? `<img src="./uploads/avatars/${participant.avatar}" alt="${escapeHtml(participant.name)}" class="w-10 h-10 rounded-full">`
                        : `<div class="bg-dark-color flex items-center justify-center text-neutral-content rounded-full w-10 h-10">
                                <span class="text-3xl">${escapeHtml(participant.name[0]).toUpperCase()}</span>
                           </div>`;
                    toggleChatPanel(true);
                    chat_message_list.scrollTop = chat_message_list.scrollHeight;
                }
            } else if (result.errors?.common?.msg) {
                toastr.warning(result.errors.common.msg);
            }
            pagination.loading = false;
        }

        function openConversation(conversationId, participantId, participantName, participantAvatar) {
            current_conversation_id = conversationId;
            participant = {
                id: participantId,
                name: participantName,
                avatar: participantAvatar || null,
            };
            pagination = { loading: false, hasMore: true, nextBefore: null };
            renderConversationList(conversationDataset);
            loadMessages(true);
        }

        chat_message_list?.addEventListener("scroll", () => {
            if (chat_message_list.scrollTop <= 40) {
                loadMessages(false);
            }
        });

        socketRef.on("new_message", (data) => {
            if (data.message.conversation_id !== current_conversation_id) return;
            const html = renderMessage({
                _id: data.message.message_id,
                text: data.message.message,
                attachments: data.message.attachments || [],
                sender: data.message.sender,
                createdAt: data.message.date_time,
            });
            const wasNearBottom =
                chat_message_list.scrollTop + chat_message_list.clientHeight >=
                chat_message_list.scrollHeight - 50;
            chat_message_list.insertAdjacentHTML("beforeend", html);
            if (wasNearBottom) {
                chat_message_list.scrollTop = chat_message_list.scrollHeight;
            }
            const previewEl = document.querySelector(`.conversation-item[data-conversation-id="${current_conversation_id}"] .conversation-preview`);
            const timeEl = document.querySelector(`.conversation-item[data-conversation-id="${current_conversation_id}"] .conversation-time`);
            if (previewEl) previewEl.textContent = data.message.message || "Attachment";
            if (timeEl) timeEl.textContent = moment(data.message.date_time).fromNow(true);
        });

        const chat_send_message_form = document.querySelector("#chat-send-message-form");
        chat_send_message_form?.addEventListener("submit", async (event) => {
            event.preventDefault();
            if (!current_conversation_id || !participant) return;

            const formData = new FormData(chat_send_message_form);
            formData.append("conversation_id", current_conversation_id);
            formData.append("receiver_id", participant.id);
            formData.append("receiver_name", participant.name);
            formData.append("receiver_avatar", participant.avatar || null);

            const response = await fetch("/inbox/message", {
                method: "POST",
                body: formData,
            });

            const result = await response.json();

            if (!result.errors) {
                chat_send_message_form.reset();
                clearAttachmentPreview();
            } else {
                toastr.warning(result.errors.common.msg);
            }
        });

        chat_message_list?.addEventListener("click", async (event) => {
            const deleteBtn = event.target.closest(".message-delete-btn");
            if (!deleteBtn) return;
            const messageId = deleteBtn.dataset.messageId;
            if (!messageId) return;
            const response = await fetch(`/inbox/message/single/${messageId}`, {
                method: "DELETE",
            });
            const result = await response.json();
            if (!result.errors) {
                const row = chat_message_list.querySelector(`.message-row[data-message-id="${messageId}"]`);
                if (row) row.remove();
            } else {
                toastr.error(result.errors.common.msg);
            }
        });

        async function deleteMeassage() {
            if (!current_conversation_id) {
                toastr.warning("You don't have select any conversation to delete messages.");
                return;
            }
            if (confirm("Are you sure to delete this messages!") !== true) return;
            const response = await fetch(`/inbox/message/delete/${current_conversation_id}`, {
                method: "DELETE",
            });
            const result = await response.json();
            if (!result.errors) {
                toastr.success(result.message);
                chat_message_list.innerHTML = `<div class="message-row message-nothing flex gap-2 text-soft-color items-center justify-center h-full">
                            <h1 class="text-2xl font-bold">You don't have message</h1>
                        </div>`;
            } else {
                toastr.error(result.errors.common.msg);
            }
        }

        async function clearMessage() {
            if (!current_conversation_id) {
                toastr.warning("You don't have select any conversation to clear messages.");
                return;
            }
            if (confirm("Are you sure to clear this messages!") !== true) return;
            const response = await fetch(`/inbox/message/clear/${current_conversation_id}`, {
                method: "DELETE",
            });
            const result = await response.json();
            if (!result.errors) {
                toastr.success(result.message);
                chat_message_list.innerHTML = `<div class="message-row message-nothing flex gap-2 text-soft-color items-center justify-center h-full">
                            <h1 class="text-2xl font-bold">You don't have message</h1>
                        </div>`;
            } else {
                toastr.error(result.errors.common.msg);
            }
        }

        const chat_message_block_container = document.querySelector(".chat-message-block-container");
        async function userBlock() {
            if (!participant) {
                toastr.warning("Please provide a valid person.");
                return;
            }
            const response = await fetch("/users/block", {
                method: "POST",
                body: JSON.stringify({ user_id: participant.id }),
                headers: { "Content-type": "application/json; charset=UTF-8" },
            });
            const result = await response.json();
            if (!result.errors) {
                toastr.success(result.message);
                updateBlockUnblockUi(currentUserId, result.participantUser?.blockable);
            } else {
                toastr.error(result.errors.common.msg);
            }
        }

        async function userUnblock() {
            if (!participant) {
                toastr.warning("Please provide a valid person.");
                return;
            }
            const response = await fetch("/users/unblock", {
                method: "POST",
                body: JSON.stringify({ user_id: participant.id }),
                headers: { "Content-type": "application/json; charset=UTF-8" },
            });
            const result = await response.json();
            if (!result.errors) {
                toastr.success(result.message);
                updateBlockUnblockUi(currentUserId, result.participantUser?.blockable);
            } else {
                toastr.error(result.errors.common.msg);
            }
        }

        function updateBlockUnblockUi(loggedInUserId, blockable) {
            const blocked = loggedInUserId && blockable && blockable.some((blockedObj) => String(blockedObj.id) === String(loggedInUserId));
            if (blocked) {
                chat_message_block_container.innerHTML = `<div class="flex items-center gap-3 px-4 py-1 hover-bg-dark-color cursor-pointer" onclick="userUnblock()">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                            </svg>Unblock</div>`;
                document.querySelector(".blocked-message-form-container").innerHTML = `<h4 class="text-soft-color">You blocked this user.</h4>`;
                chat_form_container.classList.add("hidden");
                document.querySelector(".blocked-message-form-container").classList.remove("hidden");
            } else {
                chat_message_block_container.innerHTML = `<div class="flex items-center gap-3 px-4 py-1 hover-bg-dark-color cursor-pointer" onclick="userBlock()">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                            </svg>Block</div>`;
                document.querySelector(".blocked-message-form-container").innerHTML = "";
                chat_form_container.classList.remove("hidden");
                document.querySelector(".blocked-message-form-container").classList.add("hidden");
            }
        }

        if (message_search_input) {
            message_search_input.addEventListener("input", () => {
                const query = message_search_input.value.trim().toLowerCase();
                const rows = chat_message_list.querySelectorAll(".message-row:not(.message-nothing)");
                rows.forEach((row) => {
                    const textEl = row.querySelector(".message-text");
                    if (!textEl) return;
                    const raw = textEl.dataset.raw || textEl.textContent;
                    textEl.dataset.raw = raw;
                    textEl.innerHTML = escapeHtml(raw);
                });
                if (!query) return;

                let firstMatch = null;
                rows.forEach((row) => {
                    const textEl = row.querySelector(".message-text");
                    if (!textEl) return;
                    const raw = textEl.dataset.raw || textEl.textContent;
                    if (raw.toLowerCase().includes(query)) {
                        const highlighted = raw.replace(new RegExp(escapeRegex(query), "gi"), (match) => `<span class="message-highlight">${match}</span>`);
                        textEl.innerHTML = highlighted;
                        if (!firstMatch) firstMatch = row;
                    }
                });
                if (firstMatch) {
                    firstMatch.scrollIntoView({ behavior: "smooth", block: "center" });
                }
            });
        }

        function clearAttachmentPreview() {
            if (!attachment_preview) return;
            attachment_preview.innerHTML = "";
            attachment_preview.classList.add("hidden");
        }

        if (attachment_input) {
            attachment_input.addEventListener("change", () => {
                if (!attachment_preview) return;
                const files = Array.from(attachment_input.files || []);
                if (!files.length) {
                    clearAttachmentPreview();
                    return;
                }
                const previews = files
                    .map((file) => {
                        const url = URL.createObjectURL(file);
                        return `<div class="attachment-thumb">
                                    <img src="${url}" alt="${escapeHtml(file.name)}">
                                </div>`;
                    })
                    .join("");
                attachment_preview.innerHTML = previews;
                attachment_preview.classList.remove("hidden");
            });
        }
</script>
