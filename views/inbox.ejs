        chat_message_list?.addEventListener("click", async (event) => {
            const menuBtn = event.target.closest(".message-menu-btn");
            if (menuBtn) {
                const menu = menuBtn.parentElement?.querySelector(".message-menu");
                const isActive = menu?.classList.contains("active");
                closeMessageMenus();
                if (!isActive && menu) {
                    menu.classList.add("active");
                }
                return;
            }

            const menuItem = event.target.closest(".message-menu-item");
            if (!menuItem) return;
            const action = menuItem.dataset.action;
            const row = menuItem.closest(".message-row");
            const data = getMessageData(row);
            if (!data) return;
            closeMessageMenus();

            if (action === "copy") {
                const text = data.text?.trim();
                if (!text) {
                    toastr.warning("No text to copy.");
                    return;
                }
                try {
                    const ok = await copyToClipboard(text);
                    ok ? toastr.success("Message copied.") : toastr.error("Copy failed.");
                } catch (err) {
                    toastr.error("Copy failed.");
                }
                return;
            }

            if (action === "delete") {
                if (!data.id) return;
                const response = await fetch(`/inbox/message/single/${data.id}`, {
                    method: "DELETE",
                });
                const result = await response.json();
                if (!result.errors) {
                    if (row) row.remove();
                    if (pinnedMessage?.id === data.id) {
                        pinnedMessage = null;
                        renderPinnedMessage();
                    }
                } else {
                    toastr.error(result.errors.common.msg);
                }
                return;
            }

            if (action === "pin") {
                setPinnedMessage(data);
            }
        });

