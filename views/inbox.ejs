                ? `<div class="attachments grid gap-2 mt-2 bg-light-color/50 p-2 rounded-md">
                        ${attachments}
                   </div>`
                : "";

            const rawText = String(message.text || "");
            const messageText = escapeHtml(rawText);
            const messageId = message._id || message.message_id || "";
            const time = moment(message.createdAt || message.date_time).fromNow();
            const showSender = participant?.isGroup && !isOwn;
            const attachmentsEncoded = encodeURIComponent(JSON.stringify(message.attachments || []));

