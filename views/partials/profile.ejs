<div id="conversation-off-canvas" class="user-avatar-off-canvas absolute left-0 top-0 w-0 h-[90vh] transition-[weight] duration-700 ease-out bg-dark-color invisible overflow-y-scroll">
    <div class="flex items-center justify-between text-color p-4">
        <div class="flex gap-3 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 cursor-pointer user-avatar-off-canvas-close">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
              </svg>
              <h2 class="text-2xl font-bold">Profile</h2>
        </div>
          <div class="flex gap-3 items-center">
                <a href="/users">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-soft-color cursor-pointer hover:text-color">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                    </svg>
                </a>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-soft-color cursor-pointer hover:text-color">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 3.75H6A2.25 2.25 0 0 0 3.75 6v1.5M16.5 3.75H18A2.25 2.25 0 0 1 20.25 6v1.5m0 9V18A2.25 2.25 0 0 1 18 20.25h-1.5m-9 0H6A2.25 2.25 0 0 1 3.75 18v-1.5M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-soft-color cursor-pointer hover:text-color conversation-create-btn-from-profile">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                </svg>
          </div>
    </div>
    <div class="flex flex-col gap-4 items-center justify-center text-center text-color">
        <% if(loggedInUser.avatar){ %>
            <img src="./uploads/avatars/<%= loggedInUser.avatar %>" alt="" class="w-32 h-32 rounded-full cursor-pointer">
        <% }else{ %>
            <div class="bg-light-color hover:bg-dark-color flex items-center justify-center text-neutral-content rounded-full w-32 h-32 cursor-pointer">
                <span class="text-3xl"><%= loggedInUser.username[0].toUpperCase() %></span>
            </div>
        <% } %>
        <div>
            <span class="text-sm text-dark-color">Your Name</span>
            <h2 class="text-2xl font-bold"><%= loggedInUser.username %></h2>
        </div>
        <div>
            <span class="text-sm text-dark-color">About</span>
            <p class="text-md"><%= loggedInUser.status %></p>
        </div>
        <div>
            <span class="text-sm text-dark-color">Address</span>
            <p class="text-md"><%= loggedInUser.address %></p>
        </div>
    </div>
</div>

<script>
    const user_avatar = document.getElementById("user-avatar");
    const user_avatar_off_canvas = document.querySelector(".user-avatar-off-canvas");
    const user_avatar_off_canvas_close = document.querySelector(".user-avatar-off-canvas-close");
    // user off canvas menu toggle
    user_avatar.addEventListener("click", function(){
        if(user_avatar_off_canvas.classList.contains('invisible')){
            user_avatar_off_canvas.classList.remove('invisible');
            user_avatar_off_canvas.classList.add('w-[95vw]', 'sm:w-full', 'visible', 'z-10');
        }else{
            user_avatar_off_canvas.classList.remove('w-[95vw]', 'sm:w-full','z-10');
            user_avatar_off_canvas.classList.add('invisible');
        }
    });
    // close user off canvas menu
    user_avatar_off_canvas_close.addEventListener("click", function(){
        user_avatar_off_canvas.classList.remove('w-[95vw]', 'visible');
        user_avatar_off_canvas.classList.add('invisible');
    });
    // profile off canvas menu end
</script>